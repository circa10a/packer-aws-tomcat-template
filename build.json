{
    "description": "A packer template to build AMI's with apache tomcat installed and systemd enabled. Based on Amazon linux.",
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region": "us-east-1",
        "tomcat_version": "9.0.30",
        "java_version": "1.8.0",
        "install_dir": "/tomcat",
        "service_file": "tomcat.service"
    },
    "sensitive-variables": [
        "aws_access_key",
        "aws_secret_key"
    ],
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "tomcat-{{user `tomcat_version`}}-jdk-{{user `java_version`}}-amzn-linux.x86_64-hvm-ebs",
            "ami_description": "Apache Tomcat {{user `tomcat_version`}} with java {{user `java_version`}} installed and systemd enabled. Based on Amazon linux.",
            "ami_groups": [
                "all"
            ],
            "tags": {
                "source": "https://github.com/circa10a/packer-aws-tomcat-template"
              },
            "instance_type": "t2.micro",
            "region": "{{user `region`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "amzn2-ami-hvm-2.0.*-x86_64-gp2",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "amazon"
                ],
                "most_recent": true
            },
            "ssh_username": "ec2-user",
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "TOMCAT_VERSION={{user `tomcat_version`}}",
                "JAVA_VERSION={{user `java_version`}}"
            ],
            "script": "./files/install_tomcat.sh"
        },
        {
            "type": "file",
            "source": "./files/{{user `service_file`}}",
            "destination": "/tmp/{{user `service_file`}}"
        },
        {
            "type": "shell",
            "inline": [
                "sudo mv /tmp/{{user `service_file`}} /etc/systemd/system/{{user `service_file`}}",
                "sudo systemctl daemon-reload",
                "sudo systemctl enable {{user `service_file`}}"
            ]
        }
    ]
}
